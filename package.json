{
  "name": "circleci-challenge",
  "version": "1.0.0",
  "description": "challenge for circle ci",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run db-start; node --env-file ./.env src/server.js",
    "test": "npm run db-start; jest --forceExit; npm run db-stop",
    "db-start": "docker-compose up -d test-db dbmate-up --remove-orphans",
    "db-no-migrate": "docker-compose up -d test-db --remove-orphans",
    "db-stop": "docker compose down test-db",
    "migrate": "docker compose up dbmate-up",
    "db-revert": "docker compose run --rm dbmate-down",
    "db-connect": " mysql -h localhost -P 3306 --protocol=tcp -u root -ppassword",
    "docker-build": "docker build -t circleci-challenge .",
    "docker-run": "docker run -it -p 9000:3000 circleci-challenge"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}
